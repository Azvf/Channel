{
  "_comment": "注意：在开发模式下构建时，Vite 会自动注入 'key' 字段到 dist/manifest.json。源文件不包含 key 字段。",
  "manifest_version": 3,
  "name": "GameplayTag Extension",
  "version": "1.0.0",
  "description": "智能页面标签管理系统 - 基于Unreal Engine GameplayTag设计",
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'none';"
  },
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "tabs",
    "identity"
  ],
  "host_permissions": [
    "https://*.supabase.co/*",
    "https://*/*",
    "http://*/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "GameplayTag Extension"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "all_frames": true,
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["injected.js"],
      "matches": ["<all_urls>"]
    }
  ]
}
